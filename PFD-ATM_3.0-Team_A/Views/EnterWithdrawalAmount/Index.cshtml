@{
    ViewData["Title"] = "Enter Withdrawal Amount";
}

<div class="row">
    <div class="col-xl-3"></div>
    <div class="col-xl-6 text-center">
        <h1 class="mb-sm-0">Withdraw Cash</h1>
        <br>
        <br>        
        <h3 class="mb-sm-0">Please enter amount in multiples of $10 or $50 </h3>
        <br>
    </div>
</div>

<form asp-controller="EnterWithdrawalAmount" asp-action="CheckWithdrawalAmountAndPin">
    <div class="row">
        <div class="col-xl-2"></div>
        <div class="col-xl-8">
            <div class="input-group">
                <div class="input-group-text">$</div>
                <input name="withdrawalAmount" class="form-control 2f" type="number" style="height: 100px; font-size: 40px;"
                    placeholder="0.00" id="withdrawal-amount">
            </div>
        </div>
        <div class="col-xl-2"></div>
    </div>

    <div class="row">
        <div class="col-xl-12 text-center">
            <span style="color:red;">@TempData["Message"]</span>
        </div>
    </div>

    <div class="row" style="padding-top: 20px;">
        <div class="col-xl-3 col-md-6"></div>
        <div class="col-xl-3 col-md-6">
            <!-- card -->
            <div class="card card-h-100">
                <!-- card body -->
                <button type="button" class="btn btn-dark waves-effect waves-light">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col" style="font-size: 20px;">
                                Clear
                            </div>
                        </div>
                    </div>
                </button>
                <!-- end card body -->
            </div><!-- end card -->
        </div><!-- end col -->
        <div class="col-xl-3 col-md-6">
            <!-- card -->
            <div class="card card-h-100">
                    <!-- card body -->
                    <button asp-controller="EnterWithdrawalAmount" asp-action="CheckWithdrawalAmountAndPin" type="submit" class="btn btn-dark waves-effect waves-light">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col" style="font-size: 20px;">
                                    Confirm
                                </div>
                            </div>
                        </div>
                    </button>
                <!-- end card body -->
            </div><!-- end card -->
        </div><!-- end col -->
        <div class="col-xl-3 col-md-6"></div>
</form>